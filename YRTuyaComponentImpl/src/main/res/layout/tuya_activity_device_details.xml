<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <com.apemans.quickui.label.LabelTextInfoIconView
        android:id="@+id/label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.apemans.quickui.label.LabelTextIconView
        android:id="@+id/label_device_sharing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_name" />

    <com.apemans.quickui.label.LabelTextIconView
        android:id="@+id/label_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_device_sharing" />

    <com.apemans.quickui.label.LabelTextInfoIconView
        android:id="@+id/label_firmware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_information" />

    <!--    <com.apemans.quickui.label.LabelTextIconView-->
    <!--        android:id="@+id/label_contact_us"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/label_firmware" />-->

    <Button
        style="@style/theme_apemans_normal_btn_style"
        android:id="@+id/btn_remove"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_100"
        android:text="@string/remove"
        app:layout_constraintTop_toBottomOf="@id/label_firmware" />

    <TextView
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_40"
        android:text="Reset to Factory Settings"
        android:textSize="12sp"
        android:textColor="@color/theme_sub_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_remove" />

</androidx.constraintlayout.widget.ConstraintLayout>