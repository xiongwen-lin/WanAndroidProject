<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/svAddDeviceContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvResetStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:text="@string/scan_rest_device_guide_info_1"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/sp_14"
            android:textAlignment="center" />

<!--        <View style="@style/stretch_space_vertical" />-->

        <ImageView
            android:id="@+id/ivStateStep1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/device_reset_step1" />

        <TextView
            android:id="@+id/tvResetStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:text="@string/scan_rest_device_guide_info_2"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/sp_14"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/ivStateStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/power_strip_reset_step2" />

        <TextView
            android:id="@+id/tvResetStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:text="@string/scan_rest_device_guide_info_3"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/sp_14"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/ivStateStep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/device_reset_step3" />

<!--        <pl.droidsonroids.gif.GifImageView-->
<!--            android:id="@+id/gifIvAirPurifier"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="40dp"-->
<!--            android:visibility="gone"-->
<!--            android:layout_gravity="center_horizontal" />-->

        <Button
            android:id="@+id/btnReset"
            style="@style/theme_apemans_normal_btn_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginEnd="@dimen/dp_60"
            android:textSize="@dimen/sp_18"
            android:text="@string/reset_successful" />

    </LinearLayout>

</ScrollView>