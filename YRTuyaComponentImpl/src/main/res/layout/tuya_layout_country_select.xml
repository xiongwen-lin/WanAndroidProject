<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_24"
    android:paddingRight="@dimen/dp_24">

    <TextView
        android:id="@+id/countrySelectTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:textColor="@color/theme_text_color"
        android:textSize="@dimen/sp_15"
        android:lines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/theme_text_color"
        android:textSize="@dimen/sp_16"
        android:lines="1"
        app:layout_constraintTop_toBottomOf="@+id/countrySelectTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/countrySelectArrow"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10" />

    <ImageView
        android:id="@+id/countrySelectArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow_black"
        app:layout_constraintTop_toTopOf="@+id/tv_country"
        app:layout_constraintBottom_toBottomOf="@+id/tv_country"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFECECEC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_country" />

</androidx.constraintlayout.widget.ConstraintLayout>
