<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="divider_thin">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#FFECECEC</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="DialogActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">#FF40424F</item>
        <item name="android:windowCloseOnTouchOutside">false</item>

        <item name="android:topLeftRadius">@dimen/dp_20</item>
        <item name="android:topRightRadius">@dimen/dp_20</item>

        <!--设置没有窗口标题、dialog标题等各种标题-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:title">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogTitle">@null</item>
    </style>

    <style name="AccentBtn">
        <item name="android:background">@drawable/device_accent_btn_bg</item>
    </style>

    <style name="ApemansNormalBtn">
        <item name="android:background">@drawable/device_accent_btn_bg</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>