<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/device_textview14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="The adding process takes about 1~2 minutes
Please keep the router, mobile phone and device as close as possible during the process"
        android:textColor="#414245"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_300"
        android:layout_marginTop="20dp"
        android:background="#4D414245"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/device_textview14" />

    <ProgressBar
        android:id="@+id/progressbar1"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="36dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_image" />

    <ProgressBar
        android:id="@+id/progressbar2"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/progressbar1" />

    <ProgressBar
        android:id="@+id/progressbar3"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/progressbar2"
        app:layout_constraintTop_toBottomOf="@+id/progressbar2" />

    <TextView
        android:id="@+id/device_textview15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Initialize network information"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/progressbar1"
        app:layout_constraintEnd_toEndOf="@+id/iv_image"
        app:layout_constraintStart_toEndOf="@+id/progressbar1"
        app:layout_constraintTop_toTopOf="@+id/progressbar1" />

    <TextView
        android:id="@+id/device_textview16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connect Network"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/progressbar2"
        app:layout_constraintEnd_toEndOf="@+id/device_textview15"
        app:layout_constraintStart_toStartOf="@+id/device_textview15"
        app:layout_constraintTop_toTopOf="@+id/progressbar2" />

    <TextView
        android:id="@+id/device_textview17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connect to cloud server"
        app:layout_constraintBottom_toBottomOf="@+id/progressbar3"
        app:layout_constraintEnd_toEndOf="@+id/device_textview16"
        app:layout_constraintStart_toStartOf="@+id/device_textview16"
        app:layout_constraintTop_toTopOf="@+id/progressbar3"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>