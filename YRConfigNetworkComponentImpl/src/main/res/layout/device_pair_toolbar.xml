<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pairToolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/theme_toolbar_height"
    android:theme="@style/theme_widget_style"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/imgReturn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="?actionBarItemBackground"
        android:contentDescription="RETURN"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:scaleType="centerInside"
        android:src="?ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?theme_title_text_color"
        android:textSize="@dimen/theme_title_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <TextView
        android:id="@+id/txtRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/theme_title_text_color"
        android:textSize="@dimen/theme_title_sub_size"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imgRight"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="WiFi快连" />

    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:background="?actionBarItemBackground"
        android:contentDescription="img right"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
