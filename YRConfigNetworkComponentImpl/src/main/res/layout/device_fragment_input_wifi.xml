<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <TextView
                android:id="@+id/device_textview7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="Please enter your home Wi Fi password"
                android:textColor="#414245"
                android:textSize="@dimen/sp_22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/device_textview9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:text="Only 2.4GHz networks are supported"
                android:textColor="#4D8CEC"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/device_textview7" />

            <ImageView
                android:id="@+id/device_imageview3"
                android:layout_width="300dp"
                android:layout_height="160dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/device_textview9"
                app:srcCompat="@drawable/device_illus_wifi_frequency" />

            <TextView
                android:id="@+id/device_textview10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:text="Current networks"
                android:textColor="#414245"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/device_imageview3"
                app:layout_constraintTop_toBottomOf="@+id/device_imageview3" />

            <EditText
                android:id="@+id/edt_wifi_name"
                android:layout_width="@dimen/dp_280"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/device_imageview3"
                app:layout_constraintStart_toStartOf="@+id/device_imageview3"
                app:layout_constraintTop_toBottomOf="@+id/device_textview10" />

            <TextView
                android:id="@+id/device_textview11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:text="Password"
                android:textColor="#414245"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/device_textview10"
                app:layout_constraintTop_toBottomOf="@+id/edt_wifi_name" />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text="nooie666"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/edt_wifi_name"
                app:layout_constraintStart_toStartOf="@+id/edt_wifi_name"
                app:layout_constraintTop_toBottomOf="@+id/device_textview11" />

            <Button
                android:id="@+id/btn_next"
                style="@style/theme_apemans_normal_btn_style"
                android:layout_width="@dimen/dp_256"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="@dimen/dp_50"
                android:text="Next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_pwd" />

            <ImageView
                android:id="@+id/btn_switch_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/edt_wifi_name"
                app:layout_constraintEnd_toEndOf="@+id/edt_wifi_name"
                app:layout_constraintTop_toTopOf="@+id/edt_wifi_name"
                app:srcCompat="@drawable/pairdevice_match_switchwifi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>