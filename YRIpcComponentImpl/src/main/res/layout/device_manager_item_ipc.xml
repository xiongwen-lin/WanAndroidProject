<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDeviceManagerItemIpcThumbnail"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivDeviceManagerItemThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/device_default_preview" />

        <ImageView
            android:id="@+id/ivDeviceManagerItemThumbnailCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/theme_mask_layer_color"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivDeviceManagerItemIpcStatus"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@drawable/device_status_online"
        android:translationZ="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@id/tvDeviceManagerItemIpcName"
        app:layout_constraintStart_toStartOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintTop_toTopOf="@id/tvDeviceManagerItemIpcName" />

    <TextView
        android:id="@+id/tvDeviceManagerItemIpcName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawableLeft="@drawable/device_status_online"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="婴儿房"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:translationZ="@dimen/dp_2"
        app:layout_constraintEnd_toEndOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintStart_toEndOf="@id/ivDeviceManagerItemIpcStatus"
        app:layout_constraintTop_toTopOf="@id/cvDeviceManagerItemIpcThumbnail" />

    <com.apemans.smartipcimpl.widget.SwitchImageButton
        android:id="@+id/sbtnDeviceManagerItemIpcSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:translationZ="@dimen/dp_2"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/tvDeviceManagerItemIpcTip_1"
        app:layout_constraintEnd_toEndOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintStart_toStartOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceManagerItemIpcName"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvDeviceManagerItemIpcTip_1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="center"
        android:maxLines="3"
        android:text="婴儿房"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:translationZ="@dimen/dp_2"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvDeviceManagerItemIpcTip_2"
        app:layout_constraintEnd_toEndOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintStart_toStartOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintTop_toBottomOf="@id/sbtnDeviceManagerItemIpcSleep"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvDeviceManagerItemIpcTip_2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="center"
        android:singleLine="true"
        android:text="婴儿房"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/sp_12"
        android:translationZ="@dimen/dp_2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintEnd_toEndOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintStart_toStartOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceManagerItemIpcTip_1" />

    <ImageView
        android:id="@+id/ivDeviceManagerItemIpcCloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@drawable/device_cloud_state_invalid_icon"
        android:translationZ="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@id/cvDeviceManagerItemIpcThumbnail"
        app:layout_constraintEnd_toEndOf="@id/cvDeviceManagerItemIpcThumbnail" />

</androidx.constraintlayout.widget.ConstraintLayout>