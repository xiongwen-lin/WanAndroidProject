<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ipcdevices.setting.IpcChangePasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/deviceIpcChangePasswordTip"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="@string/modify_camera_password_tip"
            android:textColor="@color/theme_text_color"
            android:textAlignment="center"
            android:textSize="@dimen/theme_primary_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.apemans.quickui.editbox.SmartEditBox
            android:id="@+id/deviceIpcChangePasswordOld"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            app:hint="@string/dev_sharing"
            app:hintcolor="@color/theme_sub_text_color"
            app:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcChangePasswordTip" />

        <com.apemans.quickui.editbox.SmartEditBox
            android:id="@+id/deviceIpcChangePasswordNew"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            app:hint="@string/dev_sharing"
            app:hintcolor="@color/theme_sub_text_color"
            app:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcChangePasswordOld" />

        <com.apemans.quickui.editbox.SmartEditBox
            android:id="@+id/deviceIpcChangePasswordConfirmPw"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            app:hint="@string/dev_sharing"
            app:hintcolor="@color/theme_sub_text_color"
            app:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcChangePasswordNew" />

        <Button
            android:id="@+id/deviceIpcChangePasswordSubmit"
            android:layout_width="match_parent"
            style="@style/theme_apemans_normal_btn_style"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginEnd="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_50"
            android:text="@string/modify_camera_password_confirm_change"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcChangePasswordConfirmPw" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>