<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ipcdevices.setting.IpcSharingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/deviceIpcSharingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/device_gateway_camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deviceIpcSharingTipTitle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center"
            android:text="@string/camera_share_title"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/sp_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcSharingIcon" />

        <TextView
            android:id="@+id/deviceIpcSharingTipContent"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center"
            android:text="@string/camera_share_title"
            android:textColor="@color/theme_sub_text_color"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcSharingTipTitle" />

        <TextView
            android:id="@+id/deviceIpcSharingTipMore"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center"
            android:text="@string/camera_share_title"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcSharingTipContent" />

        <com.apemans.quickui.editbox.SmartEditBox
            android:id="@+id/deviceIpcSharer"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            app:hint="@string/dev_sharing"
            app:hintcolor="@color/theme_sub_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcSharingTipMore"
            app:text=""
            app:textcolor="@color/theme_text_color" />

        <com.apemans.quickui.editbox.SmartEditBox
            android:id="@+id/deviceIpcSharer_1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            android:visibility="gone"
            app:hint="@string/dev_sharing"
            app:hintcolor="@color/theme_sub_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcSharer"
            app:text=""
            app:textcolor="@color/theme_text_color" />

        <com.apemans.quickui.editbox.SmartEditBox
            android:id="@+id/deviceIpcSharer_2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_60"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            android:visibility="gone"
            app:hint="@string/dev_sharing"
            app:hintcolor="@color/theme_sub_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcSharer_1"
            app:text=""
            app:textcolor="@color/theme_text_color" />

        <Button
            android:id="@+id/deviceIpcSharingSend"
            style="@style/theme_apemans_normal_btn_style"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/camera_share_title"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcSharer_2" />

        <TextView
            android:id="@+id/deviceIpcShareListTitle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="Storage card"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcSharingSend" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deviceIpcSharerRv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deviceIpcShareListTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>