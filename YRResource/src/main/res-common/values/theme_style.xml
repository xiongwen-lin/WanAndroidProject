<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--项目主题Theme-->
    <style name="Theme.OsaioProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4D8CEC</item>
        <item name="colorPrimaryVariant">#4D8CEC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <declare-styleable name="colors">
        <!--主题text颜色-->
        <attr name="theme_text_color" format="reference" />
        <!--主题标题栏Text颜色-->
        <attr name="theme_title_text_color" format="reference" />
        <!--主题背景色-->
        <attr name="theme_background_color" format="reference" />
        <!--button 颜色-->
        <attr name="theme_button_solid_color" format="reference" />
        <!--button text颜色-->
        <attr name="theme_button_text_color" format="reference" />
        <!--button阴影色-->
        <attr name="theme_button_shadow_color" format="reference" />
        <!--分割线Color-->
        <attr name="theme_line_color" format="reference" />
    </declare-styleable>


    <declare-styleable name="dimens">
        <!--导航栏高度-->
        <attr name="theme_toolbar_height" format="reference" />
        <!--标题大小-->
        <attr name="theme_title_size" format="reference" />
        <!--子标题大小-->
        <attr name="theme_title_sub_size" format="reference" />
        <!--文本Text大小-->
        <attr name="theme_text_size" format="reference" />
        <!--文本提示类/sub Text 大小-->
        <attr name="theme_text_second_size" format="reference" />
        <!--按钮高度-->
        <attr name="theme_button_height" format="reference" />
        <!--按钮阴影大小-->
        <attr name="theme_button_shadow_size" format="reference" />
        <!--按钮圆角半径大小-->
        <attr name="theme_button_radius_size" format="reference" />
    </declare-styleable>

    <declare-styleable name="drawables">
        <!--返回键图标-->
        <attr name="ic_back" format="reference" />
    </declare-styleable>

    <!--Widget主题style-->
    <style name="theme_widget_style">
        <!--colors-->
        <item name="theme_text_color">@color/theme_text_color</item>
        <item name="theme_title_text_color">@color/theme_title_text_color</item>
        <item name="theme_background_color">@color/theme_background_color</item>
        <item name="theme_button_solid_color">@color/theme_button_solid_color</item>
        <item name="theme_button_shadow_color">@color/theme_button_shadow_color</item>
        <item name="theme_line_color">@color/theme_line_color</item>
        <!--dimens-->
        <item name="theme_toolbar_height">@dimen/theme_toolbar_height</item>
        <item name="theme_title_size">@dimen/theme_title_size</item>
        <item name="theme_title_sub_size">@dimen/theme_title_sub_size</item>
        <item name="theme_text_size">@dimen/theme_text_size</item>
        <item name="theme_text_second_size">@dimen/theme_text_second_size</item>
        <item name="theme_button_height">@dimen/theme_button_height</item>
        <item name="theme_button_shadow_size">@dimen/theme_button_shadow_size</item>
        <item name="theme_button_radius_size">@dimen/theme_button_radius_size</item>
        <item name="theme_button_text_color">@color/white</item>
        <!--drawables-->
        <item name="ic_back">@drawable/ic_back</item>

        <!--系统属性-->
        <item name="android:background">@color/theme_background_color</item>
    </style>


    <!--ShapeView主题style-->
    <style name="theme_shape_button_style" parent="theme_widget_style">
        <item name="android:textColor">@color/theme_button_text_color</item>
        <item name="android:textSize">@dimen/theme_text_size</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">@dimen/theme_button_height</item>
        <item name="shape_radius">@dimen/theme_button_radius_size</item>
        <item name="shape">rectangle</item>
        <item name="shape_shadowColor">@color/theme_button_shadow_color</item>
        <item name="shape_shadowSize">@dimen/theme_button_shadow_size</item>
        <item name="shape_solidColor">@color/theme_button_solid_color</item>
        <item name="shape_strokeFocusedColor">@color/blue_200</item>
        <item name="shape_solidFocusedColor">@color/blue_200</item>
        <item name="shape_solidSelectedColor">@color/blue_200</item>
        <item name="shape_solidPressedColor">@color/blue_200</item>
    </style>

    <!-- 常用按钮统一主题 -->
    <style name="theme_apemans_normal_btn_style">
        <item name="android:background">@drawable/bg_btn_apemans_normal</item>
        <item name="android:layout_height">@dimen/theme_button_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

</resources>