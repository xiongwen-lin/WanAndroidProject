<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue">

    <TextView
        android:id="@+id/tvTwoAuthLoginAccount"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_36"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.apemans.quickui.editbox.SmartEditBox
        android:id="@+id/etTwoAuthLoginCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_50"
        android:gravity="center|start"
        app:button_gravity="center"
        app:hint="@string/input_verify_code_enter_code"
        app:right_text_color="@color/theme_green_subtext_color"
        app:right_text="发送验证码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTwoAuthLoginAccount"
        app:title="@string/input_verify_code_enter_code" />

    <Button
        android:id="@+id/btnTwoAuthLoginCheck"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_42"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginEnd="@dimen/dp_75"
        android:background="@drawable/button_blue_gray_state_list_round"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etTwoAuthLoginCode" />

</androidx.constraintlayout.widget.ConstraintLayout>
