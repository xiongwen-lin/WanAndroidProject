<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.apemans.quickui.editbox.SmartEditBox
        android:id="@+id/ipvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center|start"
        app:button_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Phone number" />

    <com.apemans.quickui.editbox.SmartEditBox
        android:id="@+id/ipvVerifyCode"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center|start"
        app:button_gravity="center"
        app:right_text_color="@color/theme_green_subtext_color"
        app:right_text="Get code"
        app:layout_constraintEnd_toStartOf="@+id/guideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipvPhone"
        app:title="验证码" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"/>

    <Button
        android:id="@+id/btnCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:layout_marginRight="@dimen/dp_10"
        android:text="Get code"
        android:textColor="@color/theme_blue"
        android:textAllCaps="false"
        android:background="@drawable/button_bg_style"
        app:layout_constraintTop_toTopOf="@+id/ipvVerifyCode"
        app:layout_constraintStart_toEndOf="@+id/guideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ipvVerifyCode"/>

</androidx.constraintlayout.widget.ConstraintLayout>