<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.control.TDPrinterFileActivity">

    <TextView
        android:id="@+id/tvSDCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_11"
        android:text="SD Card"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vSDCard"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/td_printer_select_bar"
        app:layout_constraintEnd_toEndOf="@+id/tvSDCard"
        app:layout_constraintStart_toStartOf="@+id/tvSDCard"
        app:layout_constraintTop_toBottomOf="@+id/tvSDCard" />

    <TextView
        android:id="@+id/tvUDisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_28"
        android:text="U Disk"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/tvSDCard"
        app:layout_constraintStart_toEndOf="@+id/tvSDCard"
        app:layout_constraintTop_toTopOf="@+id/tvSDCard" />

    <View
        android:id="@+id/vUDisk"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_5"
        android:visibility="gone"
        android:background="@drawable/td_printer_select_bar"
        app:layout_constraintEnd_toEndOf="@+id/tvUDisk"
        app:layout_constraintStart_toStartOf="@+id/tvUDisk"
        app:layout_constraintTop_toBottomOf="@+id/tvUDisk" />

    <LinearLayout
        android:id="@+id/llDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tvSDCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSDCard">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/td_ic_arrow_down_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Date" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/theme_secondary_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vSDCard" />

</androidx.constraintlayout.widget.ConstraintLayout>