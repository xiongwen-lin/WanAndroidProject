<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <ImageView
        android:id="@+id/device_imageview"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/device_weather_cloudy" />

    <TextView
        android:id="@+id/device_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="20"
        android:textColor="#414245"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/device_imageview"
        app:layout_constraintStart_toEndOf="@+id/device_imageview"
        app:layout_constraintTop_toTopOf="@+id/device_imageview" />

    <TextView
        android:id="@+id/device_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Â°C"
        android:textColor="#414245"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/device_textview"
        app:layout_constraintStart_toEndOf="@+id/device_textview" />

    <TextView
        android:id="@+id/device_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Snow"
        android:textColor="#414245"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/device_imageview"
        app:layout_constraintStart_toEndOf="@+id/device_textview2"
        app:layout_constraintTop_toTopOf="@+id/device_imageview" />


    <androidx.cardview.widget.CardView
        android:id="@+id/device_cardview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/device_imageview">


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/device_imageview7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="@+id/device_cardview"
        app:layout_constraintTop_toTopOf="@+id/device_cardview"
        app:srcCompat="@drawable/device_mask_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>